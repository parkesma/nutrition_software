<table class="table table-striped table-bordered">
  <!-- <thead> -->
    <tr>
      <% if current_license == "owner" %>
        <th class="text-center col-md-2">Creator</th>
      <% end %>
      <th class="text-center col-md-2">Name</th>
      <th class="text-center col-md-8">Descrption</th>
      <th class="text-center col-md-1">Kcal/Kg/hr</th>
      <th colspan="3"></th>
    </tr>
  <!-- </thead> -->

  <!-- <tbody> -->
    <% @show.each do |exercise| %>
      <tr>
        <% if current_license == "owner" %>
          <td><%= exercise.user.name %></th>
        <% end %>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.Kcal_per_kg_per_hr %></td>
        <% if @authorized_to_change %>
          <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
          <% if current_license != "employee" %>
            <td><%= link_to 'Delete', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  <!-- </tbody> -->
</table>