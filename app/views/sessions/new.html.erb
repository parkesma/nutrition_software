<% provide(:title, 'Log In') %>
<h1>Please Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>

	<!-- username -->
	<div class="row form-group col-md-offset-3">		
		<%= f.label :username, class: "control-label col-md-2" %>
		<div class="col-md-5">
			<%= f.text_field :username, class: "form-control required" %>
		</div>
	</div>
	
	<!-- password -->		
	<div class="row form-group col-md-offset-3">
		<%= f.label :password, class: "control-label col-md-2" %>
		<div class="col-md-5">
			<%= f.password_field :password, class: "form-control required" %>
		</div>
	</div>

  <div class="text-center">
		<%= f.submit "Log In", class: 'btn btn-primary' %>
	</div>
	
<% end %>