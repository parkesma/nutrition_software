<% provide(:title, 'Notes') %>
<h1>Notes</h1>

<%= form_for(:note, url: notes_path, method: :post, 
		html: {class: "form-horizontal"}) do |f| %>
	
	<%= f.text_area :text, cols: 5, rows: 3, class: 'form-control' %>
	
	<%= f.hidden_field :author_id, value: @current_user %>

	<div class="text-center">
		<%= f.submit "Add Note", class: 'btn btn-primary' %>
	</div>
	
<% end %>

<% if @notes.length > 0 %>
	<table class="table table-striped table-bordered" >
	
		<!-- notes header row -->
		<th>Date</th>
		<th>Author</th>
		<th>Note</th>

		<%= render @notes %>
	
	</table>
<% end %>