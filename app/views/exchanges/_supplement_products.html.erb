<% if !(@b.supplement_products & @supplement_products).nil? %>
	<% (@b.supplement_products & @supplement_products).each do |s| %>
		<tr>
			<td></td>
			<% if current_user == @b.user %>
					
				<%= form_for(:supplement_product, url: supplement_products_path(s), 
						method: :patch) do |f| %>
					<td colspan="3"><%= f.text_field :name, value: s.name, class: "table-text" %></td>
					<td><a><%= f.submit 'Update', class: "submit-link" %></a></td>
					<td>
						<%= link_to 'Delete', sub_exchange_path(s), method: :delete, 
								data: {confirm: 'Are you sure? This will also delete all associated Meal Plan entries.'} %>
					</td>
				<% end %>
								
			<% else %>
				<td colspan="4"><%= s.name %></td>
				<td class="text-right">
					<% if current_license == "owner" %>
						<%= "(#{s.user.name})" %>
					<% end %>
				</td>
			<% end %>
		</tr>
	<% end %>
<% end %>
<%= form_for(:supplement_product, url: supplement_products_path, method: :post) do |f| %>
	<tr>
		<%= f.hidden_field :supplement_brand_id, value: @b.id %>
		<td></td>
		<td colspan="4"><%= f.text_field :name, class: "table-text" %></td>
		<td><%= f.submit 'Add New Product', class: "submit-link" %></td>
	</tr>
<% end %>