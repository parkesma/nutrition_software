<% if !@supplement_brands.nil? %>
	<% @supplement_brands.each do |b| %>
		<tr>
			<% if current_user == b.user %>
					
				<%= form_for(:supplement_brand, url: supplement_brands_path(b), method: :patch) do |f| %>
					<td colspan="3"><%= f.text_field :name, value: b.name, class: "table-text" %></td>
					<td><a><%= f.submit 'Update', class: "submit-link" %></a></td>
					<td>
						<%= link_to 'Delete', supplement_brands_path(b), method: :delete, 
								data: {confirm: 'Are you sure? This will also delete all associated supplement products and Meal Plan entries.'} %>
					</td>
				<% end %>
								
			<% else %>
				<td colspan="5"><%= b.name %></td>
				<td class="text-right">
					<% if current_license == "owner" %>
						<%= "(#{b.user.name})" %>
					<% end %>
				</td>
			<% end %>
								
			<% @b = b %>
			<%= render 'supplement_products' %>
		</tr>
	<% end %>
<% end %>
<%= form_for(:supplement_brand, url: supplement_brands_path, method: :post) do |f| %>
	<tr>
		<td colspan="4"><%= f.text_field :name, class: "table-text" %></td>
		<td><a><%= f.submit 'Add New Supplement Brand', class: "submit-link" %></a></td>
	</tr>
<% end %>