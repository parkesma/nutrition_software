<div class="form-group">
	<% if @width == "big" %>
		<dl class="dl-horizontal col-md-9">
	<% else %>
		<dl class="dl-horizontal col-md-7">
	<% end %>
	
	<% if !@popup.blank? %>
		<div data-toggle="tooltip" title="<%= @popup %>" >
	<% end %>

  	<% if @label.length > 18 %>
  		<dt class="control-label-long">
  			<div class="control-label"><%= @label %></div>
  		</dt>
  	<% else %>
  		<dt class="control-label"><%= @label %></dt>
  	<% end %>
  			
 		<dd class="form-control">
 			<% if !@field.blank? %>
  			<div class="text-left col-md-6">

 					<% if @precision == 2 %>
	 					<%= sprintf("%0.2f", @field) %>
 					<% elsif @precision == 1 %>
	 					<%= sprintf("%0.1f", @field) %>
 					<% else %>
	 					<%= sprintf("%0.0f", @field) %>
 					<% end %>
 					
 					<% if @right == "kg" %>
 						<%= " lbs" %>
 					<% elsif @right == "beats/min" %>
 						<%= " to " %>
 						<%= sprintf("%0.0f", @field2) %>
 					<% end %>

 				</div>
 				<div class="text-right col-md-6">
 				
 					<% if @right=="kg" %>
						<%= @user.to_kg(@field) %> Kg
					<% else %>
 						<%= @right %>
					<% end %>
  				
 				</div>
 			<% end %>
 		</dd>

	<% if !@popup.blank? %>
		</div>
	<% end %>

	</dl>
</div>