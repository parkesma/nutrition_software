<% provide(:title, 'Basic Info') %>
<h1><%= @user.name %></h1>

<%= form_for(:user, url: recalculate_path, method: :patch, 
		html: {class: "form-horizontal"}) do |f| %>
		
	<div class="text-center hide-on-print">
		<%= f.submit "Recalculate", class: 'btn btn-primary' %>
	</div>

	<% @form = f%>
		<%= render 'users/basic_basic_info' %>	

	<div class="row">
		<div class="col-md-7 left-box">
			<%= render 'users/basic_present_calories' %>	
		</div>
		<div class="col-md-5 right-box">
			<%= render 'users/basic_target_calories' %>	
			<%= render 'users/basic_target_heart_rate' %>	
		</div>
	</div>

	<%= render 'users/basic_weight_evolution' %>	

<!-- add popups like Excel sheet -->
	
	<div class="text-center hide-on-print">
		<%= f.submit "Recalculate", class: 'btn btn-primary' %>
	</div>

<% end %>