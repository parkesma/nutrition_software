<tr>
	<td colspan="2" class="text-right"><%= @fa.servings_text %></td>	
	<td onchange='$("#food_form<%= @fa.id %>").submit();'>
		<%= select_tag 'food_assignment[food_id]', grouped_options_for_select(@fa.grouped_available_foods,
				selected: @fa.food.id) %>
	</td>
	<td class="text-right"><%= "%g" % ("%.2f" % @fa.number_of_exchanges) %></td>
	<td><%= @fa.food.sub_exchange.drop_down_text %></td>
	<td><%= "%g" % ("%.2f" % (@fa.food.carbs_per_serving * @fa.servings)) %></td>
	<td><%= "%g" % ("%.2f" % (@fa.food.protein_per_serving * @fa.servings)) %></td>
	<td><%= "%g" % ("%.2f" % (@fa.food.fat_per_serving * @fa.servings)) %></td>
	<td><%= "%g" % ("%.2f" % (@fa.food.kcals_per_serving * @fa.servings)) %></td>
</tr>